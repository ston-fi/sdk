{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ston-fi/sdk.git"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "cleanup": "rm -rf .turbo node_modules ./{examples,packages}/**/{.next,.turbo,node_modules,dist}",
    "lint": "biome lint ./*",
    "format": "biome format ./*",
    "test": "turbo run test",
    "build": "turbo run build",
    "dev": "turbo dev --filter=@ston-fi/sdk-example-next-js-app..."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "lefthook": "2.0.0",
    "turbo": "2.5.8",
    "typescript": "5.9.3"
  }
}
