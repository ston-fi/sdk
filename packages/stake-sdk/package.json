{
  "name": "@ston-fi/stake-sdk",
  "version": "1.3.0",
  "description": "Typescript SDK to interact with the Ston.fi stake contracts",
  "license": "MIT",
  "homepage": "https://github.com/ston-fi/sdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ston-fi/sdk.git",
    "directory": "packages/stake-sdk"
  },
  "type": "module",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js"
  },
  "scripts": {
    "format": "pnpm run /^format:.*/",
    "format:biome": "biome format --write",
    "lint": "pnpm run /^lint:.*/",
    "lint:tsc": "tsc --noEmit --pretty",
    "lint:biome": "biome check",
    "test": "vitest",
    "build": "tsup",
    "prepublishOnly": "pnpm run lint && pnpm run test --run && pnpm run build && pnpm attw --profile esm-only --pack . && pnpm publint"
  },
  "peerDependencies": {
    "@ton/ton": "^13.9.0 || ^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "catalog:",
    "esbuild-analyzer": "catalog:",
    "publint": "catalog:",
    "tsup": "catalog:",
    "vitest": "catalog:"
  }
}
